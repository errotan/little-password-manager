  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "spec/**/*",
    "src/**/*",
    "test/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
}
