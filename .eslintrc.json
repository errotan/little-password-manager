{
  "env": {
    "browser": true,
    "commonjs": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "nw": "readonly"
  },
  "extends": "airbnb-typescript/base",
  "parserOptions": {
    "ecmaVersion": 2017,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["import"],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
